// Return from the current Func.
// Func's TypeStack should match its Signature.
// Params
//    op: Op
//    type_stack: LinkedList[TypeNode]
//    if_block_return_stack: LinkedList[TypeNode]
// Return TypeStack
function type_check_return
  op:Op
  type_stack:Node
  if_block_return_stack:Node
-> Node :
  op  Op.func
  dup Func.signature
  dup Signature.returns
  type_stack TypeStack.get_types
  take
    stack_types
    return_types
    signature
    func
  in

  // Test if current TypeStack matches with Signature.returns
  if return_types stack_types List.streq not do
    type_stack op Op.token
    "Stack state does not match with the return types of '"
    func Func.name            str.cat
    "' function\n\n"          str.cat
    "Function signature:\n"   str.cat
    signature Signature.repr  str.cat
    "FUNCTION_SIGNATURE_ERROR" CompilerErrorWithStack
  endif
  if_block_return_stack
end

// Pop item from the stack and push the string representation of its type to the stack.
// Params
//    op: Op
//    type_stack: LinkedList[TypeNode]
// Return TypeStack
function type_check_typeof op:Op type_stack:Node :
  op Op.token
  type_stack LinkedList.pop cast(TypeNode)
  take type token in

  // Stack is empty
  if type cast(int) -1 == do
    type_stack token
    "Cannot drop value from empty stack"
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  endif

  // Save the popped type to Op
  type TypeNode.type op Op->stack_typeof

  // Push the string representation of the popped type
  token Token.location "str" TypeNode.init cast(ptr) type_stack LinkedList.push
end

// DIV pops two items from the stack and divides second from the top one.
// Then push the quotient of the two values.
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_div token:Token type_stack:Node :
  token Token.value str.copy str.upper
  type_stack TypeStack.copy

  // Pop two items from the stack
  type_stack LinkedList.pop cast(TypeNode)
  type_stack LinkedList.pop cast(TypeNode)
  take
    t2 t1
    temp_stack
    token_value
  in

  // Not enough values in the stack
  if t2 cast(int) -1 == do
    temp_stack token
    token_value " intrinsic requires two integers" str.cat
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  // Wrong token type
  do
    temp_stack token
    token_value " intrinsic requires two integers\n\n" str.cat
    "Popped types:\n" str.cat
    t1 TypeNode.type str.cat "\n" str.cat
    t2 TypeNode.type str.cat
    "VALUE_ERROR" CompilerErrorWithStack
  endif

  // Push the remainder and the quotient to the stack
  token Token.location
  take location in
  location "int" TypeNode.init cast(ptr) type_stack LinkedList.push

  // Clean memory from the temporary stack
  TypeNode.size temp_stack LinkedList.delete
end

