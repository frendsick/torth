end

// DUP duplicates the top item from the stack
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_dup token:Token type_stack:Node :
  // Pop one item from the stack
  type_stack LinkedList.pop cast(TypeNode)
  take type in

  // Stack is empty
  if type cast(int) -1 == do
    type_stack token
    "Cannot duplicate value from empty stack"
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  endif

  // Push the popped value twice
  type cast(ptr) type_stack LinkedList.push
  type cast(ptr) type_stack LinkedList.push
end

// Execute a function pointer
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_exec token:Token type_stack:Node :
  // Pop function pointer from the stack
  type_stack TypeStack.copy
  type_stack LinkedList.pop cast(TypeNode)
  take type temp_stack in

  // Stack is empty
  if type cast(int) -1 == do
    temp_stack token
    "Cannot execute function pointer from empty stack"
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  endif

  if type TypeNode.type "fn[" str.startswith not do
    temp_stack token
    "EXEC intrinsic requires function pointer\n"
    "Example: fn[str int -> bool]\n\n"  str.cat
    "Popped type: "                     str.cat
    type TypeNode.type                  str.cat
    "VALUE_ERROR" CompilerErrorWithStack
  endif

  type TypeNode.type parse_signature_from_fn_ptr
  dup Signature.params
  over Signature.returns
  take
    return_types
    param_types
    signature
  in

  // Pop all function parameters from stack
  0 take index in
  while index param_types List.len < do
    index param_types List.nth str.load
    take expected_type in

    if expected_type "None" streq do
      break
    endif

    // The stack should contain values before pop
    if type_stack TypeStack.get_types List.len 0 == do
      temp_stack token
      "Stack does not match with the function pointer signature\n\n"
      "Signature: "             str.cat
      signature Signature.repr  str.cat
      "VALUE_ERROR" CompilerErrorWithStack
    endif

    type_stack LinkedList.pop cast(TypeNode) TypeNode.type
    take popped_type in

    // The popped type should match the function signature
    if popped_type expected_type streq not do
      temp_stack token
      "Stack does not match with the function pointer signature\n\n"
      "Signature: "             str.cat
      signature Signature.repr  str.cat
      "VALUE_ERROR" CompilerErrorWithStack
    endif

    index 1 + index =
  done

  0 index =
  while index return_types List.len < do
    index return_types List.nth str.load
    take return_type in

    if return_type "None" streq do
      break
    endif

    token Token.location return_type TypeNode.init cast(ptr)
    type_stack LinkedList.push

    index 1 + index =
  done

  // Clean memory from the temporary stack
  TypeNode.size temp_stack LinkedList.delete
end

function parse_signature_from_fn_ptr fn_ptr:str -> Signature :
  "fn[" fn_ptr str.removeprefix
  "]" swap str.removesuffix
  take signature_repr in

  signature_repr Signature.from_repr
end

// LOAD variants load certain type of value from where a pointer is pointing to.
// It takes one pointer from the stack and pushes back the dereferenced pointer value.
// Different LOAD variants: LOAD_BYTE, LOAD_WORD, LOAD_DWORD, LOAD_QWORD
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_load token:Token type_stack:Node :
  // Pop one item from the stack
  type_stack TypeStack.copy
  type_stack LinkedList.pop cast(TypeNode)
  take type temp_stack in

  // Stack is empty
  if type cast(int) -1 == do
    temp_stack token
    "The stack is empty - PTR required"
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  // Wrong token type
  endif

  // Push loaded value which could be of any type
  token Token.location "any" TypeNode.init cast(ptr)
  type_stack LinkedList.push

  // Clean memory from the temporary stack
  TypeNode.size temp_stack LinkedList.delete
end

// OVER Intrinsic pushes a copy of the second element of the stack.
// Example with the stack's top element being the rightmost: a b -> a b a
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_over token:Token type_stack:Node :
  // Pop two items from the stack
  type_stack TypeStack.copy
  type_stack LinkedList.pop cast(TypeNode)
  type_stack LinkedList.pop cast(TypeNode)
  take t2 t1 temp_stack in

  // Not enough values in the stack
  if t2 cast(int) -1 == do
    temp_stack token
    "OVER intrinsic requires two values in the stack"
    "POP_FROM_EMPTY_STACK" CompilerErrorWithStack
  endif

  // Push the values back to the stack in the correct order
  t2 cast(ptr) type_stack LinkedList.push
  t1 cast(ptr) type_stack LinkedList.push
  t2 cast(ptr) type_stack LinkedList.push

  // Clean memory from the temporary stack
  TypeNode.size temp_stack LinkedList.delete
end

// ROT Intrinsic rotates the top three elements of the stack so that the third becomes first
// Example with the stack's top element being the rightmost: a b c -> b c a
// Params
//    token: Token
