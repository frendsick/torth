// Return from the current Function.
// Function's TypeStack should match its Signature.
// Params
//    op: Op
//    type_stack: LinkedList[TypeNode]
//    if_block_return_stack: LinkedList[TypeNode]
// Return TypeStack
function type_check_return ptr ptr ptr -> ptr :
  dup Op.get_function
  dup Function.get_signature Signature.get_returns
  take
    return_types
    func
    op
    type_stack
    variables
  in

  // Test if current TypeStack matches with Signature.returns
  type_stack TypeStack.get_types
  take token_types in
  if return_types token_types List.equals not do
    op Op.get_token
    "Stack state does not match with the return types of '"
    func Function.get_name  str.cat
    "' function"            str.cat
    // TODO: Print expected return types
    "FUNCTION_SIGNATURE_ERROR" CompilerErrorWithToken
  endif
  return_types
end

// DIVMOD pops two items from the stack and divides second from the top one.
// Then push the remainder and the quotient of the two values.
// Params
//    token: Token
//    type_stack: LinkedList[TypeNode]
// Return None
function type_check_divmod ptr ptr :
  dup Token.get_value str.copy str.upper
  take
    token_value
    token
    type_stack
  in

  // Pop two items from the stack
  type_stack LinkedList.pop
  type_stack LinkedList.pop
  take t2 t1 in

  // Not enough values in the stack
  if t2 int -1 == do
    token
    token_value " intrinsic requires two integers" str.cat
    "POP_FROM_EMPTY_STACK" CompilerErrorWithToken
  // Wrong token type
  elif
    t1 TypeNode.get_type INTEGER_TYPES Array.contains_int not
    t2 TypeNode.get_type INTEGER_TYPES Array.contains_int not
    ||
  do
    token
    token_value " intrinsic requires two integers\n\n" str.cat
    "Popped types:\n" str.cat
    t1 TypeNode.get_type token_type_repr str.cat "\n" str.cat
    t2 TypeNode.get_type token_type_repr str.cat
    "VALUE_ERROR" CompilerErrorWithToken
  endif

  // Push the remainder and the quotient to the stack
  token Token.get_location
  take location in
  location TokenType.INT TypeNode.init type_stack LinkedList.push
  location TokenType.INT TypeNode.init type_stack LinkedList.push
end

