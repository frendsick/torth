  take
    token
    type_stack
    branched_stacks
  in

  type_stack LinkedList.pop
  take type in

  if type int -1 == do
    token "The stack is empty" "POP_FROM_EMPTY_STACK" CompilerErrorWithToken
  elif type TypeNode.get_type TokenType.BOOL != do
